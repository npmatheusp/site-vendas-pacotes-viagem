<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pacotes de Viagem</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>Pacotes de Viagem</h1>
        <a href="/login">Login</a>
    </header>

    <main>
        <ul>
            <% pacotes.forEach(function(pacote) { %>
                <li>
                    <h2><%= pacote.nome %></h2>
                    <p>Destino: <%= pacote.destino %></p>
                    <p>Data de Partida: <%= pacote.data_partida %></p>
                    <p>Pre√ßo: R$ <%= pacote.preco %></p>
                    <a href="/pacote/<%= pacote.id %>">Ver Detalhes</a>
                </li>
            <% }); %>
        </ul>
    </main>
</body>
</html>
